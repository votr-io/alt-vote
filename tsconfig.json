{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "rootDir": "./src",
    "outDir": "./build",
    "declaration": true,
    "declarationDir": "./build",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "noEmitOnError": true
  },
  "files": ["./src/index.ts"]
}
